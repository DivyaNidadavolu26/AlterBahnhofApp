<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditEmployees"
    android:background="@drawable/gradient1">

    <EditText
        android:id="@+id/firstName"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First Name" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last Name" />

    <EditText
        android:id="@+id/nickName"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nick Name" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone" />

    <TextView
        android:id="@+id/position"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="258dp"
        android:text="Position"
        android:textSize="19.5dp" />

    <Spinner
        android:id="@+id/pos"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="257dp"
        android:entries="@array/positions"
        android:prompt="@string/position_prompt"

        />

    <Spinner
        android:id="@+id/extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/colorAccent"
        android:text="Save" />

    <EditText
        android:id="@+id/pay"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="285dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Current Pay Rate" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="220.5dp"
        android:text="Gender"
        android:textColor="@color/cardview_dark_background"
        android:textColorLink="#020202"
        android:textSize="19.5dp" />

    <RadioButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="219dp"
        android:text="Male"
        android:textSize="19.5dp" />

    <RadioButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="219dp"
        android:text="Female"
        android:textSize="19.5dp" />

    <TextView
        android:id="@+id/hireD"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="339dp"
        android:text="Hire Date"
        android:textSize="19.5dp" />

    <EditText
        android:id="@+id/datehire"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="325dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Select Date..."
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/birth"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="380dp"
        android:text="Birth Date"
        android:textSize="19.5dp" />

    <EditText
        android:id="@+id/birthdate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="368dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Select Date..."
        android:textColor="@color/colorPrimaryDark" />


</RelativeLayout>
